{
  "swagger": "2.0",
  "info": {
    "title": "Sharks API",
    "description": "API  sharks",
    "version": "1.0.0"
  },
  "host": "shark-swuw.onrender.com",
  "basePath": "/",
  "schemes": ["https"],
  "paths": {
    "/": {
      "get": {
        "description": "Hello SHARKS!",
        "responses": {
          "200": {
            "description": "Hello SHARKS!"
          }
        }
      }
    },
    "/sharks/": {
      "get": {
        "tags": ["Sharks"],
        "description": "Get all sharks",
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "List of all sharks"
          }
        }
      },
      "post": {
        "tags": ["Sharks"],
        "description": "Create a new shark",
        "consumes": ["application/json"],
        "parameters": [
          {
            "name": "shark",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "name": { "type": "string" },
                "scientific_name": { "type": "string" },
                "size_meters": { "type": "number" },
                "num_human_kills": { "type": "number" },
                "habitat": {
                  "type": "string",
                  "enum": ["coastal", "pelagic", "deep ocean"]
                },
                "aggressiveness": { "type": "string" },
                "order": { "type": "string" }
              },
              "required": [
                "name",
                "scientific_name",
                "size_meters",
                "habitat",
                "order"
              ]
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Shark created successfully"
          }
        }
      }
    },
    "/sharks/{id}": {
      "get": {
        "tags": ["Sharks"],
        "description": "Get shark by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": { "description": "Shark found" },
          "404": { "description": "Shark not found" }
        }
      },
      "put": {
        "tags": ["Sharks"],
        "description": "Update shark by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "shark",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "name": { "type": "string" },
                "scientific_name": { "type": "string" },
                "size_meters": { "type": "number" },
                "num_human_kills": { "type": "number" },
                "habitat": {
                  "type": "string",
                  "enum": ["coastal", "pelagic", "deep ocean"]
                },
                "aggressiveness": { "type": "string" },
                "order": { "type": "string" }
              },
              "required": [
                "name",
                "scientific_name",
                "size_meters",
                "habitat",
                "order"
              ]
            }
          }
        ],
        "responses": {
          "200": { "description": "Shark updated successfully" },
          "404": { "description": "Shark not found" }
        }
      },
      "delete": {
        "tags": ["Sharks"],
        "description": "Delete shark by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": { "description": "Shark deleted successfully" },
          "404": { "description": "Shark not found" }
        }
      }
    }
  }
}
